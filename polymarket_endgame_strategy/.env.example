# Polymarket Endgame Strategy Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# Polymarket API Credentials
# ============================================
# Your Polymarket private key (for signing transactions)
POLYMARKET_PRIVATE_KEY=your_private_key_here

# API credentials (get from Polymarket CLOB API)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here

# ============================================
# Trading Parameters
# ============================================
# Entry price threshold (in cents, 95 = $0.95)
ENTRY_PRICE=95

# Exit price for limit order (in cents, 99 = $0.99)
EXIT_PRICE=99

# Time window for market ending (in minutes)
MIN_TIME_TO_END=5
MAX_TIME_TO_END=15

# Maximum position size per trade (in USDC)
MAX_POSITION_SIZE=100

# Total maximum exposure (in USDC)
MAX_TOTAL_EXPOSURE=500

# ============================================
# Network Settings
# ============================================
# Polygon RPC URL (for blockchain interactions)
POLYGON_RPC_URL=https://polygon-rpc.com

# Use testnet or mainnet
USE_TESTNET=false

# ============================================
# Monitoring Settings
# ============================================
# Scan interval (in seconds)
SCAN_INTERVAL=10

# Enable detailed logging
DEBUG_MODE=false
